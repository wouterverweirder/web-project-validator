{
  "plugins": [
    "./lib/reporter/lint-css/custom-rules/box-sizing-border-box"
  ],
  "rules": {
    "devinehowest/box-sizing-border-box": true,
    "declaration-property-unit-blacklist": {
      "/^font/": ["px"],
      "/^margin/": ["px"],
      "/^padding/": ["px"],
      "/^border/": ["px"],
      "/^top/": ["px"],
      "/^left/": ["px"],
      "/^bottom/": ["px"],
      "/^right/": ["px"],
      "/^width/": ["px"],
      "/^height/": ["px"]
    },
    "property-blacklist": ["float"],
    "selector-no-id": true
  }
}
