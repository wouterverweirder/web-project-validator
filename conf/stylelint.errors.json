{
  "plugins": [
    "./lib/style_linter/custom-rules/has-flexbox",
    "./lib/style_linter/custom-rules/box-sizing-border-box",
    "./lib/style_linter/custom-rules/font-size-reset"
  ],
  "rules": {
    "devinehowest/box-sizing-border-box": true,
    "devinehowest/has-flexbox": true,
    "devinehowest/font-size-reset": true,
    "declaration-property-unit-blacklist": {
      "/^font/": ["px"],
      "/^margin/": ["px"],
      "/^padding/": ["px"],
      "/^border/": ["px"],
      "/^top/": ["px"],
      "/^left/": ["px"],
      "/^bottom/": ["px"],
      "/^right/": ["px"],
      "/^width/": ["px"],
      "/^height/": ["px"]
    },
    "property-blacklist": ["float"],
    "selector-no-id": true,
    "max-nesting-depth": 3,
    "selector-max-specificity": "0,2,1"
  }
}
