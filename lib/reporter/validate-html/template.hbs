<section>
  <header>
    <h1 class="h{{indentLevel}}">
      HTML Validation:
      <span class="small">{{numErrors}} errors / {{numWarnings}} warnings</span>
    </h1>
  </header>
  <p>{{context}}</p>
  <section>
    <header class="hidden"><h1 class="h{{indentLevel2}}">validation messages</h1></header>
    {{#each messages}}
      <article class="panel panel-{{outputType}}">
        <header class="panel-heading"><h1 class="panel-title">{{outputType}} - {{message}}</h1></header>
        <div class="panel-body">
          <p class="message">{{numMessages}} occurences:</p>
          {{#if evidence}}<p class="evidence"><pre>{{evidence}}</pre></p>{{/if}}
        </div>
      </article>
    {{/each}}
  </section>
</section>
