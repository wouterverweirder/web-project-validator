<section data-file="{{url}}">
  <header>
    <h1 class="h{{indentLevel}}">
      HTML Validation:
      <span class="small">{{numErrors}} errors / {{numWarnings}} warnings</span>
    </h1>
  </header>
  <p>{{url}}</p>
  <section>
    <header class="hidden"><h1 class="h{{indentLevel2}}">validation messages</h1></header>
    {{#each errors}}
      <article class="card mb-3">
        <header class="card-header bg-{{outputType}} text-white"><h5 class="mb-0"><a href="#validate-html-error-{{@index}}" data-toggle="collapse" class="text-white">{{numMessages}}x {{outputType}} - {{message}}</a></h5></header>
        <div class="card-body collapse" id="validate-html-error-{{@index}}">
          <ol class="evidence">
          {{#each evidence}}
            <li data-line="{{line}}">
              {{#if line}}<span>Line: {{line}}</span>{{/if}}
              {{#if extract}}<pre>{{extract}}</pre>{{/if}}
            </li>
          {{/each}}
          </ol>
        </div>
      </article>
    {{/each}}
    {{#each warnings}}
      <article class="card mb-3">
        <header class="card-header bg-{{outputType}} text-white"><h5 class="mb-0"><a href="#validate-html-warning-{{@index}}" data-toggle="collapse" class="text-white">{{numMessages}}x {{outputType}} - {{message}}</a></h5></header>
        <div class="card-body collapse" id="validate-html-warning-{{@index}}">
          <ol class="evidence">
          {{#each evidence}}
            <li data-line="{{line}}">
              {{#if line}}<span>Line: {{line}}</span>{{/if}}
              {{#if extract}}<pre>{{extract}}</pre>{{/if}}
            </li>
          {{/each}}
          </ol>
        </div>
      </article>
    {{/each}}
  </section>
</section>
