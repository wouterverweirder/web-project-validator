<section>
  <header>
    <h1 class="h{{indentLevel}}">
      Validate Resources
      <span class="small">{{resources.length}} resources ({{numErrors}} errors / {{numWarnings}} warnings)</span>
    </h1>
  </header>
  <section>
    <header><h1 class="h{{indentLevel2}}">validation messages</h1></header>
    {{#each errors}}
      <article class="card mb-3">
        <header class="card-header bg-{{outputType}} text-white"><h5 class="mb-0">{{numMessages}}x {{outputType}}: {{message}}</h5></header>
        <div class="card-body">
          <ol>
            {{#each evidence}}
              <li data-line="{{line}}">
                {{url}}{{message}}
              </li>
            {{/each}}
          </ol>
        </div>
      </article>
    {{/each}}
    {{#each warnings}}
      <article class="card mb-3">
        <header class="card-header bg-{{outputType}} text-white"><h5 class="mb-0">{{numMessages}}x {{outputType}}: {{message}}</h5></header>
        <div class="card-body">
          <ol>
            {{#each evidence}}
              <li data-line="{{line}}">
                {{url}}{{message}}
              </li>
            {{/each}}
          </ol>
        </div>
      </article>
    {{/each}}
  </section>
  <section>
    <header><h1 class="h{{indentLevel2}}">resources list</h1></header>
    <ol>
    {{#each resources}}
    <li>{{url}}</li>
    {{/each}}
    </ol>
  </section>
</section>
